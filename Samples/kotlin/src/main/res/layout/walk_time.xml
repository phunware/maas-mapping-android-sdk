<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.phunware.mapping.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/nav_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.phunware.kotlin.sample.NavigationOverlayView
            android:id="@+id/nav_overlay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow_bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floor_switcher_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="@color/semi_transparent"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_above="@+id/fab"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_floors" />

        <Spinner
            android:id="@+id/floorSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_navigation"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <RelativeLayout
        android:id="@+id/walk_time_view"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingRight="26dp"
        android:paddingLeft="26dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/walk_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/directions_walk"
            android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/walk_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/walk_image"
            android:textColor="@color/azure"
            android:text="10 MIN"
            android:paddingTop="4dp"
            android:paddingLeft="6dp"
            android:fontFamily="sans-serif-regular"
            android:textSize="21.33dp"/>

        <TextView
            android:id="@+id/arrival_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/walk_image"
            android:textColor="@color/outer_space"
            android:text="Arrival Time 9:52 PM"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:fontFamily="sans-serif-regular"
            android:textSize="14.67dp"/>

        <Button
            android:id="@+id/button_exit_route"
            android:layout_height="wrap_content"
            android:layout_width="144dp"
            android:layout_alignParentRight="true"
            android:text="@string/demo_walk_time_exit"
            android:background="@color/exit_red"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:textSize="18.67dp"/>

    </RelativeLayout>

</RelativeLayout>